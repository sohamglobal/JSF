<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
	<managed-bean>
		<managed-bean-name>discountCalculator</managed-bean-name>
		<managed-bean-class>mybeans.DiscountCalculator</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>Customer.xhtml</display-name>
		<from-view-id>/Customer.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/Discount.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
